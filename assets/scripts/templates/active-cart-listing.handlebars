
<h2>Active Shopping Cart:</h2>
{{#each cartProducts as |cartProduct|}}

  <ul>
    <li>
      <h1 data-id="{{cartProduct._id}}">
        <small>
          {{cartProduct.name}}
        </small>
      </h1>
    </li>
    <li>
        ID: {{cartProduct._id}}
    </li>
    <li>
        Price: ${{cartProduct.price}}
    </li>
    <li>
        Description: {{cartProduct.description}}
    </li>
    <li>
        <button class="remove-from-cart" data-id={{cartProduct._id}}>
          Remove from Cart
        </button>
    </li>
  </ul>
{{/each}}
