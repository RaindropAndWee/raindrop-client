{{#each pastPurchases as |pastPurchase|}}

  <hr>
  <h3>
{{pastPurchase.updatedAt}}
</h3>
  <div style="margin-left: 1vw">
      {{#each pastPurchase.cartProducts as |cartProduct|}}
        <div class="row">
          <div class="col-xs-2 past-cart-product-image" style="background: linear-gradient(rgba(0, 0, 0, 0.0), rgba(0, 0, 0, .1)), url({{cartProduct.imageUrl}}); background-position: center; background-size: 100%; background-repeat: no-repeat">
</div>
          <div class="col-md-4">
            <h4 style="margin-bottom: 2px;">{{cartProduct.name}}</h4>
            <small>
        Quantity: {{cartProduct.quantity}}
      </small>
          </div>
          <div class="col-md-4">
            <h3 class="past-cart-product-price">
      <small>
      ${{cartProduct.price}}
    </small>
  </h3>
          </div>
        </div>
      {{/each}}
      <div class="row" style="margin-bottom: 45px;">
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
    <h4 class="past-cart-total">
      Total: ${{pastPurchase.total}}
    </h4>
  </div>
  </div>
  </div>
{{/each}}
